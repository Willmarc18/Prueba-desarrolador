<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>TABLA CLIENTES</title>
    <!-- NAVIGATION -->
    <link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">
  </head>
  <body>

    <!-- navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">CLiente</a>    
    </nav>
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-9">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <td>N°</td>
                            <td>Tipo Identificacion</td>
                            <td>Numero Identificacion</td>
                            <td>Nombres</td>
                            <td>Apellidos</td>
                            <td>Razon Social</td>
                            <td>Municipio</td>
                        </tr>
                      </thead>
                    <tbody>
                       <% if (data) { %>
                            <% for(var i=0; i < data.length; i++) { %>
                              <tr>
                                <td><%= (i + 1) %></td>
                                <td><%= data[i].tipo_identifiacion %></td>
                                <td><%= data[i].numero_identifiacion %></td>
                                <td><%= data[i].nombres %></td>
                                <td><%= data[i].apellidos %></td>
                                <td><%= data[i].razon_social %></td>
                                <td><%= data[i].municipio %></td>
                                <td>
                                    <a href="/delete/<%= data[i].id %>" class="btn btn-danger">ELIMINAR</a>
                                    <a href="/update/<%= data[i].id %>" class="btn btn-info">ACTUALIZAR</a>
                                </td>
                                </tr>
                            <% } %>
                        <%  } %>

                    </tbody>
                </table>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="post">
                        
                        <div class="form-group">
                            <input type="number" name="nombres" placeholder="Nombres"  class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="apellidos" placeholder="Apellidos" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="numero_cuenta" placeholder="Numero Cuenta" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="tipo_cuenta" placeholder="Tipo Cuenta" class="form-control">
                        </div>
                        <button type="button" class="btn btn-primary" onclick="mensaje()">
                            AÑADIR
                        </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

</body>
</html>


